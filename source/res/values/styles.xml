<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="joindinRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/joindin_ratingbar_full</item>
        <item name="android:minHeight">62dp</item>
        <item name="android:maxHeight">62dp</item>
    </style>

    <style name="joindinDialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/joindin_turquoise</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="joindinEventBar">
        <item name="android:background">@drawable/event_bar_background</item>
    </style>
</resources>
